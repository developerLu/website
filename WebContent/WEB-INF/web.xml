<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <javaee:display-name>website Demo</javaee:display-name>
  <context-param>
    <javaee:param-name>contextConfigLocation</javaee:param-name>
    <javaee:param-value> 
			  	classpath:/conf/*.xml
			</javaee:param-value>
  </context-param>
  <listener>
    <javaee:listener-class>
				org.springframework.web.context.ContextLoaderListener
			</javaee:listener-class>
  </listener>
  <listener>
    <javaee:listener-class>com.inspur.hsf.config.ContextLoaderListener
				</javaee:listener-class>
  </listener>
  <jsp-config>
    <taglib>
      <taglib-uri>/tags/website</taglib-uri>
      <taglib-location>/WEB-INF/tlds/website.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/tags/website-function</taglib-uri>
      <taglib-location>/WEB-INF/tlds/function.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/functions</taglib-uri>
      <taglib-location>/WEB-INF/tlds/fn.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
      <taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
    </taglib>
  </jsp-config>
  <listener>
    <javaee:listener-class>com.hongshee.ejforum.common.ContextListener</javaee:listener-class>
  </listener>
  <listener>
    <javaee:listener-class>com.hongshee.ejforum.common.SessionListener</javaee:listener-class>
  </listener>
  <filter>
    <filter-name>RewriteFilter</filter-name>
    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    <init-param>
      <javaee:param-name>logLevel</javaee:param-name>
      <javaee:param-value>WARN</javaee:param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>RewriteFilter</filter-name>
    <url-pattern>/ejforum/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>securityFilter</filter-name>
    <filter-class>org.loushang.internet.filter.SecurityFilter
				</filter-class>
    <init-param>
      <javaee:param-name>encode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
    <init-param>
      <javaee:param-name>fromEncode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>themeBindingFilter</filter-name>
    <filter-class>org.loushang.internet.filter.ThemeBindingFilter
				</filter-class>
    <init-param>
      <javaee:param-name>excludes</javaee:param-name>
      <javaee:param-value>*.jpg,*.css,*.html,*.jsp,*.png,*.js,*.gif,*.swf,*.ico</javaee:param-value>
    </init-param>
    <init-param>
      <javaee:param-name>encode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
    <init-param>
      <javaee:param-name>fromEncode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>themeBindingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>webDispatcher</filter-name>
    <filter-class>org.loushang.internet.servlet.WebDispatcherFilter
				</filter-class>
    <init-param>
      <javaee:param-name>excludes</javaee:param-name>
      <javaee:param-value>*.jsp,*.html,/ejforum/*,/website/ejforum/*</javaee:param-value>
    </init-param>
    <init-param>
      <javaee:param-name>encode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
    <init-param>
      <javaee:param-name>fromEncode</javaee:param-name>
      <javaee:param-value>UTF-8</javaee:param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>webDispatcher</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>AjaxServlet</servlet-name>
    <servlet-class>com.hongshee.ejforum.service.AjaxServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxServlet</servlet-name>
    <url-pattern>/ejforum/ajax</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ImageServlet</servlet-name>
    <servlet-class>com.hongshee.ejforum.service.ImageServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageServlet</servlet-name>
    <url-pattern>/ejforum/vcode</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AttachServlet</servlet-name>
    <servlet-class>com.hongshee.ejforum.service.AttachServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AttachServlet</servlet-name>
    <url-pattern>/ejforum/attach</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RssServlet</servlet-name>
    <servlet-class>com.hongshee.ejforum.service.RssServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RssServlet</servlet-name>
    <url-pattern>/ejforum/rss</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>OpmlServlet</servlet-name>
    <servlet-class>com.hongshee.ejforum.service.OpmlServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>OpmlServlet</servlet-name>
    <url-pattern>/ejforum/opml</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>
</web-app>